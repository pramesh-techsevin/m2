<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <LinearLayout
        android:id="@+id/len1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/imgproduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/product1" />

            <ImageView
                android:id="@+id/imgoffer"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="35dp"
                android:src="@drawable/offer"

                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/productname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="Canon Powershot G1 X Mark III coming "
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productweight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productname"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="30dp"
                android:padding="10dp"
                android:text="1 TB "
                android:textColor="#0A684B"
                android:textSize="15sp"


                />

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productweight"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/productbaseprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="KWD 1.695"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/productofferprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=" KWD 1.295"
                    android:textColor="#9C0B0B"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnqtyremove"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/plusminusbutton"
                    android:text="-"
                    android:textSize="15sp"
                    android:textStyle="bold"

                    />


                <TextView
                    android:id="@+id/qty"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnqtyadd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/plusminusbutton"
                    android:text="+"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnaddtocart"
                    android:layout_width="220dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/line2"


                    android:background="@drawable/roundedbutton"
                    android:text="ADD TO CART"
                    android:textColor="#fff"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line4"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgaddtolist"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/addtolist" />

                <TextView
                    android:id="@+id/txtaddtolist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="2dp"
                    android:text="Add to List "
                    android:textSize="15sp" />


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>