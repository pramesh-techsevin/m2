<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="2dp"
    tools:context=".MyCart">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/rounded_screen_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/productimg"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:src="@drawable/product1"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/line1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/textviewProductname"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="Canon Powershot G1 X Mark III coming "
                        android:textSize="15sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/textviewProductStorage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="1 TB"
                        android:textColor="#047783"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:id="@+id/line2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">


                        <Button
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/plusminusbutton"
                            android:text="-"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textStyle="bold"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="#000"
                            android:textSize="10sp" />

                        <Button
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/plusminusbutton"
                            android:text="+"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:id="@+id/linearlayoutOfList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp">

                            <ImageView
                                android:id="@+id/imgaddtolist"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/addtolist" />

                            <TextView
                                android:id="@+id/textviewAddToList"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/imgaddtolist"
                                android:text="List"
                                android:textSize="10sp"



                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearlayoutOfAddtoNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp">


                            <ImageView

                                android:id="@+id/imgaddtonote"
                                android:layout_width="25dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="2dp"
                                android:layout_toRightOf="@+id/textviewAddToList"
                                android:src="@drawable/addtonote" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/imgaddtonote"
                                android:text="Add Note"
                                android:textSize="10sp"
                                android:layout_marginTop="5dp"
                                />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>


            <Button
                android:id="@+id/btnClose"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/rel1"
                android:background="@drawable/closeicon"
                android:text="X"
                android:textColor="#000" />


        </LinearLayout>

        <!--    Finish of first phase      -->

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#AAA9A9"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">


            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layoutDirection="rtl"
                android:switchPadding="1dp"

                android:textSize="10sp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#00cc7a" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Substitute"
                    android:layout_marginLeft="0dp"
                    android:textSize="10sp"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="if not available"
                    android:textSize="10sp"
                    />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KWD"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>


            <TextView
                android:id="@+id/textviewProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=" 1.320 "
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="each"
                android:layout_marginTop="20dp"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="KWD "
                android:textColor="#ffcc00"

                 />

            <TextView
                android:id="@+id/textviewProductTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffcc00"
                android:layout_marginTop="20dp"
                android:text="5.432"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="45dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:layout_marginTop="1dp"
                android:textColor="#4d79ff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4d79ff"
                android:text="Specify the Substitution"
                android:textSize="10sp"
                />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>